<UserControl x:Class="MarcoERP.WpfUI.Views.Inventory.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:common="clr-namespace:MarcoERP.WpfUI.Common"
             FlowDirection="RightToLeft">

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}" />
    </UserControl.InputBindings>

    <Grid>
        <!-- ════════════════════════════════════════════════════════════ -->
        <!-- LAYER 0: Main Content (full width)                          -->
        <!-- ════════════════════════════════════════════════════════════ -->
        <Grid Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ═══ Toolbar ═══ -->
            <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="10,6" Margin="4,4,4,2"
                    Effect="{x:Null}">
                <DockPanel>
                    <TextBlock Text="الأصناف" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,4,0" />

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" HorizontalAlignment="Left">
                        <!-- New -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource SuccessBrush}" Foreground="White"
                                Command="{Binding NewCommand}" Height="30" Padding="12,0"
                                materialDesign:ButtonAssist.CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" VerticalAlignment="Center" />
                                <TextBlock Text="جديد" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!-- Edit -->
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding EditSelectedCommand}" Height="30" Padding="12,0" Margin="4,0,0,0"
                                materialDesign:ButtonAssist.CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14" VerticalAlignment="Center" />
                                <TextBlock Text="تعديل" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!-- Delete -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="{StaticResource DangerBrush}"
                                Command="{Binding DeleteCommand}" Height="30" Padding="8,0" Margin="4,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Width="14" Height="14" VerticalAlignment="Center" />
                                <TextBlock Text="حذف" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!-- Refresh -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding LoadCommand}" Height="30" Padding="8,0" Margin="4,0,0,0"
                                ToolTip="تحديث">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" />
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- ═══ Error Bar ═══ -->
            <Border Grid.Row="1" Background="{StaticResource ErrorBackgroundBrush}" CornerRadius="4" Padding="8,4" Margin="6,2"
                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AlertCircle" Foreground="{StaticResource ErrorForegroundBrush}" Width="16" Height="16" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorForegroundBrush}" FontSize="12"
                               Margin="6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- ═══ Full-Width Data Grid ═══ -->
            <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="0" Margin="4,2,4,2">
                <DataGrid ItemsSource="{Binding AllProducts}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column" FontSize="12"
                          RowHeight="30" ColumnHeaderHeight="32" BorderThickness="0"
                          materialDesign:DataGridAssist.CellPadding="8 4"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8 6">
                    <DataGrid.InputBindings>
                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding EditSelectedCommand}" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الكود" Binding="{Binding Code}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                    <Setter Property="Foreground" Value="#546E7A" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="اسم الصنف" Binding="{Binding NameAr}" Width="*" MinWidth="150" />
                        <DataGridTextColumn Header="التصنيف" Binding="{Binding CategoryName}" Width="100" />
                        <DataGridTextColumn Header="الوحدة" Binding="{Binding BaseUnitName}" Width="70" />
                        <DataGridTextColumn Header="المورد" Binding="{Binding DefaultSupplierName}" Width="100" />
                        <DataGridTextColumn Header="التكلفة" Binding="{Binding CostPrice, StringFormat=N2}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                    <Setter Property="TextAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="سعر البيع" Binding="{Binding DefaultSalePrice, StringFormat=N2}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                    <Setter Property="TextAlignment" Value="Right" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="الحالة" Binding="{Binding Status, Converter={StaticResource StatusToArabicConverter}}" Width="60" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ═══ Status Bar ═══ -->
            <Border Grid.Row="3" Padding="8,4" Margin="6,0,6,2">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="{StaticResource MutedTextBrush}"
                               DockPanel.Dock="Right" VerticalAlignment="Center" />
                    <ProgressBar IsIndeterminate="{Binding IsBusy}" Height="2"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 DockPanel.Dock="Left" VerticalAlignment="Center" Width="80" Margin="0,0,8,0" />
                </DockPanel>
            </Border>
        </Grid>

        <!-- ════════════════════════════════════════════════════════════ -->
        <!-- LAYER 1: Side Drawer Overlay (appears on New/Edit)          -->
        <!-- ════════════════════════════════════════════════════════════ -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="10">

            <!-- Semi-transparent backdrop -->
            <Border Background="{StaticResource OverlayBrush}" Opacity="0.6">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CancelCommand}" />
                </Border.InputBindings>
            </Border>

            <!-- Drawer panel (right side, ~35% width) -->
            <Border Background="White" CornerRadius="8,0,0,8"
                    HorizontalAlignment="Left" Width="420"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="Black" Direction="180" />
                </Border.Effect>

                <DockPanel>
                    <!-- Drawer Header -->
                    <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8,0,0,0" Padding="14,10">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right" FontSize="15" FontWeight="SemiBold" Foreground="White">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="IsNew" Converter="{StaticResource BoolToNewEditConverter}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button DockPanel.Dock="Left" HorizontalAlignment="Left"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CancelCommand}"
                                    Foreground="White" Padding="4" Width="28" Height="28"
                                    ToolTip="إغلاق (Esc)">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                            </Button>
                        </DockPanel>
                    </Border>

                    <!-- Drawer Footer (Action Buttons) -->
                    <Border DockPanel.Dock="Bottom" Padding="12,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Command="{Binding SaveCommand}" Height="32" Padding="16,0"
                                    materialDesign:ButtonAssist.CornerRadius="4">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" VerticalAlignment="Center" />
                                    <TextBlock Text="حفظ" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CancelCommand}" Height="32" Padding="16,0" Margin="6,0,0,0"
                                    materialDesign:ButtonAssist.CornerRadius="4">
                                <TextBlock Text="إلغاء" FontSize="12" />
                            </Button>
                            <!-- Deactivate -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{StaticResource DangerBrush}"
                                    Command="{Binding DeactivateCommand}" Height="32" Padding="8,0" Margin="6,0,0,0"
                                    Visibility="{Binding CanDeactivate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="تعطيل الصنف">
                                <materialDesign:PackIcon Kind="EyeOff" Width="16" Height="16" />
                            </Button>
                            <!-- Activate -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{StaticResource SuccessBrush}"
                                    Command="{Binding ActivateCommand}" Height="32" Padding="8,0" Margin="2,0,0,0"
                                    Visibility="{Binding CanActivate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="تفعيل الصنف">
                                <materialDesign:PackIcon Kind="Eye" Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Drawer Body (Scrollable Sections) -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  Padding="14,10">

                        <StackPanel>

                            <!-- ═══ Section: بيانات أساسية ═══ -->
                            <Border BorderBrush="#ECEFF1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Package" Foreground="{StaticResource PrimaryBrush}"
                                                                 Width="16" Height="16" VerticalAlignment="Center" />
                                        <TextBlock Text="بيانات أساسية" FontSize="12" FontWeight="SemiBold"
                                                   Margin="6,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <!-- Code + Name -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="6" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding FormCode, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="الكود"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsNew}" FontSize="12" Padding="6,4"
                                                 FlowDirection="LeftToRight" />
                                        <TextBox Grid.Column="2" Text="{Binding FormNameAr, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="الاسم بالعربي *"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}" FontSize="12" Padding="6,4" />
                                    </Grid>

                                    <!-- English name -->
                                    <TextBox Text="{Binding FormNameEn, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="English name"
                                             materialDesign:HintAssist.IsFloating="True"
                                             IsEnabled="{Binding IsEditing}" FontSize="12" Padding="6,4" Margin="0,6,0,0"
                                             FlowDirection="LeftToRight" />

                                    <!-- Category + Base Unit -->
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="6" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0" ItemsSource="{Binding Categories}"
                                                  SelectedValue="{Binding FormCategoryId}"
                                                  SelectedValuePath="Id" DisplayMemberPath="NameAr"
                                                  materialDesign:HintAssist.Hint="التصنيف *"
                                                  materialDesign:HintAssist.IsFloating="True"
                                                  IsEnabled="{Binding IsEditing}" IsEditable="True"
                                                  common:F1SearchBehavior.IsEnabled="True"
                                                  common:F1SearchBehavior.Title="بحث التصنيفات"
                                                  FontSize="12" Padding="6,4" />
                                        <ComboBox Grid.Column="2" ItemsSource="{Binding Units}"
                                                  SelectedValue="{Binding FormBaseUnitId}"
                                                  SelectedValuePath="Id" DisplayMemberPath="NameAr"
                                                  materialDesign:HintAssist.Hint="الوحدة الأساسية *"
                                                  materialDesign:HintAssist.IsFloating="True"
                                                  IsEnabled="{Binding IsNew}" IsEditable="True"
                                                  common:F1SearchBehavior.IsEnabled="True"
                                                  common:F1SearchBehavior.Title="بحث وحدة"
                                                  FontSize="12" Padding="6,4" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- ═══ Section: التسعير ═══ -->
                            <Border BorderBrush="#ECEFF1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="CurrencyUsd" Foreground="#2E7D32"
                                                                 Width="16" Height="16" VerticalAlignment="Center" />
                                        <TextBlock Text="التسعير" FontSize="12" FontWeight="SemiBold"
                                                   Margin="6,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="6" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding FormCostPrice, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                 materialDesign:HintAssist.Hint="سعر التكلفة"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsNew}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                        <TextBox Grid.Column="2"
                                                 Text="{Binding FormDefaultSalePrice, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                 materialDesign:HintAssist.Hint="سعر البيع"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- ═══ Section: المخزون ═══ -->
                            <Border BorderBrush="#ECEFF1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="ChartBar" Foreground="{StaticResource UnsavedWarningBrush}"
                                                                 Width="16" Height="16" VerticalAlignment="Center" />
                                        <TextBlock Text="المخزون" FontSize="12" FontWeight="SemiBold"
                                                   Margin="6,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="6" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding FormMinimumStock, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                 materialDesign:HintAssist.Hint="الحد الأدنى"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                        <TextBox Grid.Column="2"
                                                 Text="{Binding FormReorderLevel, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                 materialDesign:HintAssist.Hint="نقطة إعادة الطلب"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- ═══ Section: الضرائب + الباركود ═══ -->
                            <Border BorderBrush="#ECEFF1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="Receipt" Foreground="#6A1B9A"
                                                                 Width="16" Height="16" VerticalAlignment="Center" />
                                        <TextBlock Text="الضرائب والباركود" FontSize="12" FontWeight="SemiBold"
                                                   Margin="6,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="6" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding FormVatRate, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                 materialDesign:HintAssist.Hint="ضريبة %"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                        <TextBox Grid.Column="2"
                                                 Text="{Binding FormBarcode, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="الباركود"
                                                 materialDesign:HintAssist.IsFloating="True"
                                                 IsEnabled="{Binding IsEditing}"
                                                 FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- ═══ Section: الوحدات ═══ -->
                            <Border BorderBrush="#ECEFF1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <materialDesign:PackIcon Kind="SwapHorizontal" Foreground="#0277BD"
                                                                 Width="16" Height="16" VerticalAlignment="Center" />
                                        <TextBlock Text="الوحدات" FontSize="12" FontWeight="SemiBold"
                                                   Margin="6,0,0,0" VerticalAlignment="Center" />
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                Command="{Binding AddUnitCommand}"
                                                Foreground="{StaticResource InfoBrush}"
                                                Padding="2" Height="22" Margin="8,0,0,0"
                                                IsEnabled="{Binding IsEditing}" FontSize="11">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="PlusCircle" Width="14" Height="14" VerticalAlignment="Center" />
                                                <TextBlock Text="إضافة" Margin="2,0,0,0" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <DataGrid ItemsSource="{Binding FormUnits}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False" CanUserDeleteRows="False"
                                              GridLinesVisibility="Horizontal"
                                              FontSize="11" RowHeight="30" ColumnHeaderHeight="32"
                                              BorderThickness="1" BorderBrush="#E0E0E0"
                                              materialDesign:DataGridAssist.CellPadding="4 2"
                                              MinHeight="60" MaxHeight="160">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                                <Setter Property="Background" Value="#0277BD" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                                <Setter Property="FontSize" Value="11" />
                                                <Setter Property="Height" Value="32" />
                                                <Setter Property="Padding" Value="6,4" />
                                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                                                <Setter Property="BorderBrush" Value="White" />
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="الوحدة" Width="*" MinWidth="80">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox ItemsSource="{Binding DataContext.Units,
                                                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  SelectedValue="{Binding SelectedUnitId, UpdateSourceTrigger=PropertyChanged}"
                                                                  SelectedValuePath="Id" DisplayMemberPath="NameAr"
                                                                  FontSize="11" Margin="-4,0"
                                                                  IsEnabled="{Binding DataContext.IsEditing,
                                                                    RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="معامل" Width="65">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding ConversionFactor, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                                 BorderThickness="0" FontSize="11" Padding="2"
                                                                 FlowDirection="LeftToRight" TextAlignment="Center"
                                                                 IsEnabled="{Binding DataContext.IsEditing,
                                                                   RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="بيع" Width="65">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding SalePrice, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                                 BorderThickness="0" FontSize="11" Padding="2"
                                                                 FlowDirection="LeftToRight" TextAlignment="Right"
                                                                 IsEnabled="{Binding DataContext.IsEditing,
                                                                   RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="شراء" Width="65">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding PurchasePrice, StringFormat=N2, UpdateSourceTrigger=LostFocus}"
                                                                 BorderThickness="0" FontSize="11" Padding="2"
                                                                 FlowDirection="LeftToRight" TextAlignment="Right"
                                                                 IsEnabled="{Binding DataContext.IsEditing,
                                                                   RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridCheckBoxColumn Header="✓" Width="30"
                                                                    Binding="{Binding IsDefault, UpdateSourceTrigger=PropertyChanged}" />
                                            <DataGridTemplateColumn Header="" Width="28">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                                Command="{Binding DataContext.RemoveUnitCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Foreground="{StaticResource DangerBrush}"
                                                                Padding="0" Width="22" Height="22"
                                                                IsEnabled="{Binding DataContext.IsEditing,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                            <materialDesign:PackIcon Kind="Close" Width="12" Height="12" />
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>

                            <!-- ═══ Section: المورد + الوصف ═══ -->
                            <StackPanel Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <materialDesign:PackIcon Kind="Truck" Foreground="{StaticResource DarkSurfaceBrush}"
                                                             Width="16" Height="16" VerticalAlignment="Center" />
                                    <TextBlock Text="المورد والوصف" FontSize="12" FontWeight="SemiBold"
                                               Margin="6,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>

                                <ComboBox ItemsSource="{Binding Suppliers}"
                                          SelectedValue="{Binding FormDefaultSupplierId}"
                                          SelectedValuePath="Id" DisplayMemberPath="NameAr"
                                          materialDesign:HintAssist.Hint="المورّد الأساسي (اختياري)"
                                          materialDesign:HintAssist.IsFloating="True"
                                          IsEnabled="{Binding IsEditing}"
                                          FontSize="12" Padding="6,4"
                                          materialDesign:ComboBoxAssist.ShowSelectedItem="True" />

                                <TextBox Text="{Binding FormDescription, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="وصف / ملاحظات"
                                         materialDesign:HintAssist.IsFloating="True"
                                         IsEnabled="{Binding IsEditing}"
                                         FontSize="12" Padding="6,4" Margin="0,6,0,0"
                                         TextWrapping="Wrap" MinHeight="40" AcceptsReturn="True" />
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
