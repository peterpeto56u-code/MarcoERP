<Window x:Class="MarcoERP.WpfUI.Views.Sales.PosOpenSessionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="فتح جلسة نقطة البيع" Width="440" Height="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False"
        FlowDirection="RightToLeft"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <materialDesign:PackIcon Kind="PointOfSale" Width="40" Height="40"
                                     Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="فتح جلسة جديدة" FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource DarkSurfaceBrush}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Text="حدد الخزنة والمستودع ورصيد الافتتاح"
                       FontSize="12" Foreground="{StaticResource SubtitleBrush}" HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Cashbox -->
        <ComboBox Grid.Row="2" x:Name="CashboxCombo"
                  materialDesign:HintAssist.Hint="الخزنة"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="NameAr" SelectedValuePath="Id"
                  FontSize="15" Height="48"/>

        <!-- Warehouse -->
        <ComboBox Grid.Row="4" x:Name="WarehouseCombo"
                  materialDesign:HintAssist.Hint="المستودع"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="NameAr" SelectedValuePath="Id"
                  FontSize="15" Height="48"/>

        <!-- Opening Balance -->
        <TextBox Grid.Row="6" x:Name="OpeningBalanceBox"
                 materialDesign:HintAssist.Hint="رصيد الافتتاح"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="15" Height="48" Text="0"
                 GotFocus="NumericBox_GotFocus"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="فتح الجلسة" Click="Confirm_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{StaticResource PrimaryDarkBrush}" Foreground="White"
                    Width="140" Height="42" FontSize="15" FontWeight="Bold"
                    Margin="0,0,12,0"/>
            <Button Content="إلغاء" Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="110" Height="42" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
