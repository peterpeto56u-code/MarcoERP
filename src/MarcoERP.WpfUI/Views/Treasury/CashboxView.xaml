<UserControl x:Class="MarcoERP.WpfUI.Views.Treasury.CashboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:common="clr-namespace:MarcoERP.WpfUI.Common"
             FlowDirection="RightToLeft">

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}" />
    </UserControl.InputBindings>

    <Grid>
        <Grid Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="10,6" Margin="4,4,4,2">
                <DockPanel>
                    <TextBlock Text="الخزن" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" HorizontalAlignment="Left">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource SuccessBrush}" Foreground="White"
                                Command="{Binding NewCommand}" Height="30" Padding="12,0"
                                materialDesign:ButtonAssist.CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" VerticalAlignment="Center" />
                                <TextBlock Text="جديد" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding EditSelectedCommand}" Height="30" Padding="12,0" Margin="4,0,0,0"
                                materialDesign:ButtonAssist.CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14" VerticalAlignment="Center" />
                                <TextBlock Text="تعديل" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="#FFA000"
                                Command="{Binding SetDefaultCommand}" Height="30" Padding="8,0" Margin="4,0,0,0"
                                ToolTip="تعيين افتراضي">
                            <materialDesign:PackIcon Kind="Star" Width="16" Height="16" />
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding LoadCommand}" Height="30" Padding="8,0" Margin="4,0,0,0" ToolTip="تحديث">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" />
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource ErrorBackgroundBrush}" CornerRadius="4" Padding="8,4" Margin="6,2"
                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AlertCircle" Foreground="{StaticResource ErrorForegroundBrush}" Width="16" Height="16" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorForegroundBrush}" FontSize="12"
                               Margin="6,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Background="White" CornerRadius="6" Padding="0" Margin="4,2,4,2">
                <DataGrid ItemsSource="{Binding AllCashboxes}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Single" GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column" FontSize="12"
                          RowHeight="30" ColumnHeaderHeight="32" BorderThickness="0"
                          materialDesign:DataGridAssist.CellPadding="8 4"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8 6">
                    <DataGrid.InputBindings>
                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding EditSelectedCommand}" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الكود" Binding="{Binding Code}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                    <Setter Property="Foreground" Value="#546E7A" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="الاسم" Binding="{Binding NameAr}" Width="*" MinWidth="120" />
                        <DataGridTextColumn Header="الاسم (EN)" Binding="{Binding NameEn}" Width="110" />
                        <DataGridTextColumn Header="الحساب" Binding="{Binding AccountName}" Width="110" />
                        <DataGridTemplateColumn Header="افتراضي" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon
                                        Kind="{Binding IsDefault, Converter={StaticResource BoolToCheckIconConverter}}"
                                        Foreground="{Binding IsDefault, Converter={StaticResource BoolToColorConverter}}"
                                        HorizontalAlignment="Center" Width="16" Height="16" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="نشط" Width="45">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon
                                        Kind="{Binding IsActive, Converter={StaticResource BoolToCheckIconConverter}}"
                                        Foreground="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                        HorizontalAlignment="Center" Width="16" Height="16" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Row="3" Padding="8,4" Margin="6,0,6,2">
                <DockPanel>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="{StaticResource MutedTextBrush}"
                               DockPanel.Dock="Right" VerticalAlignment="Center" />
                    <ProgressBar IsIndeterminate="{Binding IsBusy}" Height="2"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 DockPanel.Dock="Left" VerticalAlignment="Center" Width="80" Margin="0,0,8,0" />
                </DockPanel>
            </Border>
        </Grid>

        <!-- Side Drawer -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="10">
            <Border Background="{StaticResource OverlayBrush}" Opacity="0.6">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CancelCommand}" />
                </Border.InputBindings>
            </Border>

            <Border Background="White" CornerRadius="8,0,0,8"
                    HorizontalAlignment="Left" Width="360">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2" Color="Black" Direction="180" />
                </Border.Effect>
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8,0,0,0" Padding="14,10">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right" FontSize="15" FontWeight="SemiBold" Foreground="White">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="IsNew" Converter="{StaticResource BoolToNewEditConverter}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button DockPanel.Dock="Left" HorizontalAlignment="Left"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CancelCommand}"
                                    Foreground="White" Padding="4" Width="28" Height="28" ToolTip="إغلاق (Esc)">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                            </Button>
                        </DockPanel>
                    </Border>

                    <Border DockPanel.Dock="Bottom" Padding="12,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Command="{Binding SaveCommand}" Height="32" Padding="16,0"
                                    materialDesign:ButtonAssist.CornerRadius="4">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" VerticalAlignment="Center" />
                                    <TextBlock Text="حفظ" Margin="4,0,0,0" FontSize="12" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CancelCommand}" Height="32" Padding="16,0" Margin="6,0,0,0"
                                    materialDesign:ButtonAssist.CornerRadius="4">
                                <TextBlock Text="إلغاء" FontSize="12" />
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{StaticResource DangerBrush}"
                                    Command="{Binding DeleteCommand}" Height="32" Padding="8,0" Margin="6,0,0,0"
                                    Visibility="{Binding CanDeactivate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="تعطيل">
                                <materialDesign:PackIcon Kind="EyeOff" Width="16" Height="16" />
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{StaticResource SuccessBrush}"
                                    Command="{Binding ActivateCommand}" Height="32" Padding="8,0" Margin="2,0,0,0"
                                    Visibility="{Binding CanActivate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="تفعيل">
                                <materialDesign:PackIcon Kind="Eye" Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="14,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="CashRegister" Foreground="{StaticResource PrimaryBrush}"
                                                         Width="16" Height="16" VerticalAlignment="Center" />
                                <TextBlock Text="بيانات الخزنة" FontSize="12" FontWeight="SemiBold"
                                           Margin="6,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBox Text="{Binding FormCode}" IsEnabled="False"
                                     materialDesign:HintAssist.Hint="كود الخزنة"
                                     materialDesign:HintAssist.IsFloating="True"
                                     FontSize="12" Padding="6,4" FlowDirection="LeftToRight" />
                            <TextBox Text="{Binding FormNameAr, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="الاسم (عربي) *"
                                     materialDesign:HintAssist.IsFloating="True"
                                     IsEnabled="{Binding IsEditing}" FontSize="12" Padding="6,4" Margin="0,6,0,0" />
                            <TextBox Text="{Binding FormNameEn, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="English Name"
                                     materialDesign:HintAssist.IsFloating="True"
                                     IsEnabled="{Binding IsEditing}" FontSize="12" Padding="6,4" Margin="0,6,0,0"
                                     FlowDirection="LeftToRight" />
                            <ComboBox ItemsSource="{Binding Accounts}"
                                      SelectedValue="{Binding FormAccountId}"
                                      SelectedValuePath="Id" DisplayMemberPath="AccountNameAr"
                                      IsEnabled="{Binding IsEditing}" IsEditable="True"
                                      common:F1SearchBehavior.IsEnabled="True"
                                      common:F1SearchBehavior.Title="بحث الحسابات"
                                      materialDesign:HintAssist.Hint="الحساب المحاسبي"
                                      materialDesign:HintAssist.IsFloating="True"
                                      FontSize="12" Padding="6,4" Margin="0,8,0,0" />
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
