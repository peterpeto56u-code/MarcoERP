<Window x:Class="MarcoERP.WpfUI.Views.Common.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="تغيير كلمة المرور"
        Height="320" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="يجب تغيير كلمة المرور للمتابعة"
                   FontSize="16" FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,8" />

        <TextBlock Grid.Row="1" Text="أدخل كلمة المرور الجديدة (8 أحرف على الأقل، حرف كبير، حرف صغير، رقم)"
                   FontSize="11" TextWrapping="Wrap"
                   Foreground="{StaticResource SubtitleBrush}"
                   Margin="0,0,0,16" />

        <PasswordBox Grid.Row="2" x:Name="NewPasswordBox"
                     materialDesign:HintAssist.Hint="كلمة المرور الجديدة"
                     FontSize="14" Margin="0,0,0,12"
                     MaxLength="100" />

        <PasswordBox Grid.Row="3" x:Name="ConfirmPasswordBox"
                     materialDesign:HintAssist.Hint="تأكيد كلمة المرور الجديدة"
                     FontSize="14" Margin="0,0,0,12"
                     MaxLength="100" />

        <TextBlock Grid.Row="4" x:Name="ErrorText"
                   Foreground="Red" FontSize="12"
                   TextWrapping="Wrap" Margin="0,0,0,8"
                   Visibility="Collapsed" />

        <StackPanel Grid.Row="6" Orientation="Horizontal"
                    HorizontalAlignment="Left" Margin="0,8,0,0">
            <Button Content="تغيير" Click="OnChangeClick"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    Margin="0,0,8,0" Width="100" />
            <Button Content="إلغاء" Click="OnCancelClick"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>
