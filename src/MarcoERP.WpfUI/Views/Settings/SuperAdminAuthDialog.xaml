<Window x:Class="MarcoERP.WpfUI.Views.Settings.SuperAdminAuthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="التحقق من الهوية — Governance" Width="520" Height="460"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False" Topmost="True"
        FlowDirection="RightToLeft"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="24">
        <Border Background="White" CornerRadius="10" Padding="24" BorderBrush="#E6E9EE" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ShieldLock" Width="44" Height="44"
                                             Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="التحقق من الهوية"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkSurfaceBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>
                    <TextBlock Text="سجّل الدخول بحساب يمتلك صلاحية Governance"
                               FontSize="14"
                               Foreground="{StaticResource SubtitleBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <TextBox Grid.Row="2"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="اسم المستخدم"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="16" MaxLength="50" Height="52"
                         VerticalContentAlignment="Center"/>

                <PasswordBox Grid.Row="4" x:Name="PasswordField"
                             materialDesign:HintAssist.Hint="كلمة المرور"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             FontSize="16" MaxLength="100" Height="52"
                             VerticalContentAlignment="Center"
                             PasswordChanged="PasswordField_PasswordChanged"
                             CommandManager.PreviewExecuted="PasswordField_PreviewExecuted"/>

                <Border Grid.Row="6" CornerRadius="6" Padding="12,10"
                        Background="{StaticResource ErrorBackgroundBrush}"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{StaticResource ErrorForegroundBrush}"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Border>

                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Button Content="تأكيد"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource PrimaryBrush}" Foreground="White"
                            Width="170" Height="44" FontSize="16" FontWeight="Bold"
                            Margin="0,0,12,0"/>
                    <Button Content="إلغاء"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="130" Height="44" FontSize="15"/>
                </StackPanel>

                <ProgressBar Grid.Row="9" IsIndeterminate="True" Height="3"
                             VerticalAlignment="Bottom" Margin="0,10,0,0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                             Foreground="{StaticResource PrimaryBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
