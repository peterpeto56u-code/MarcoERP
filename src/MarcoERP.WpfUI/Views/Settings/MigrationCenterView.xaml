<UserControl x:Class="MarcoERP.WpfUI.Views.Settings.MigrationCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MarcoERP.WpfUI.Common"
             FlowDirection="RightToLeft" Background="White"
             local:LoadedCommandBehavior.Command="{Binding LoadCommand}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── Header ─────────────────────────────────── -->
        <Border Grid.Row="0" Background="#37474F" Padding="20,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="مركز التحديثات" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Migration Center — Phase 6" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"
                               FlowDirection="LeftToRight" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="13"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button Content="تنفيذ التحديثات" Command="{Binding ExecuteMigrationsCommand}"
                            IsEnabled="{Binding CanExecute}"
                            Style="{StaticResource MaterialDesignFlatLightBgButton}" Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ── Progress Bar (visible during execution) ── -->
        <Border Grid.Row="1" Padding="20,8"
                Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding ProgressText}" FontSize="13" Foreground="{StaticResource DarkSurfaceBrush}" Margin="0,0,0,6"/>
                <ProgressBar IsIndeterminate="True" Height="4" Foreground="{StaticResource WarningBrush}"/>
            </StackPanel>
        </Border>

        <!-- ── Result Banner ──────────────────────────── -->
        <Border Grid.Row="2" Padding="14,10"
                Visibility="{Binding HasResult, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border CornerRadius="6" Padding="16,10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource ErrorBackgroundBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding LastExecutionSucceeded}" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock FontSize="14" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding StatusMessage}"/>
                            <Setter Property="Foreground" Value="{StaticResource ErrorForegroundBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LastExecutionSucceeded}" Value="True">
                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Border>

        <!-- ── Content (Pending + History) ──────────── -->
        <Grid Grid.Row="3" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Pending Migrations List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="12">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="التحديثات المعلقة" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkSurfaceBrush}"/>
                        <TextBlock FontSize="12" Foreground="{StaticResource SubtitleBrush}" Margin="0,2,0,0">
                            <Run Text="العدد: "/>
                            <Run Text="{Binding PendingCount, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding PendingMigrations}" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Margin="0,2" Background="{StaticResource UnsavedWarningBackgroundBrush}" CornerRadius="4">
                                    <TextBlock Text="{Binding}" FontSize="12" Foreground="{StaticResource UnsavedWarningBrush}"
                                               FlowDirection="LeftToRight" TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Execution History -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="سجل التنفيذ" FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource DarkSurfaceBrush}" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding ExecutionHistory}" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              BorderThickness="0" Background="White"
                              HorizontalGridLinesBrush="#EEEEEE">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم الترحيل" Binding="{Binding MigrationName}" Width="*"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                            <DataGridTextColumn Header="التاريخ" Binding="{Binding StartedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="130"/>
                            <DataGridTemplateColumn Header="الحالة" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="فشل"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorForegroundBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSuccessful}" Value="True">
                                                            <Setter Property="Text" Value="نجح"/>
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="المنفذ" Binding="{Binding ExecutedBy}" Width="100"/>
                            <DataGridTextColumn Header="المدة (ث)" Binding="{Binding DurationSeconds, StringFormat=N1}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
