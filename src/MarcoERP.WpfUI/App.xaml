<Application x:Class="MarcoERP.WpfUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:MarcoERP.WpfUI.Converters"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Indigo.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.DeepPurple.xaml" />

                <!-- App Styles -->
                <ResourceDictionary Source="Themes/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Value Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <conv:BoolToCheckIconConverter x:Key="BoolToCheckIconConverter" />
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
            <conv:BoolToNewEditConverter x:Key="BoolToNewEditConverter" />
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter" />
            <conv:StatusToArabicConverter x:Key="StatusToArabicConverter" />
            <conv:SourceTypeToArabicConverter x:Key="SourceTypeToArabicConverter" />
            <conv:IsNegativeConverter x:Key="IsNegativeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
